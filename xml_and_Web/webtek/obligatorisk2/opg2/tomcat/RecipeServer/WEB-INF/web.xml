<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>RecipeServer</display-name>
  <servlet>
    <servlet-name>RecipeServer</servlet-name>
    <servlet-class>RecipeServer</servlet-class>
	<init-param>
	  <param-name>RecipeXMLPath</param-name>
	  <param-value>c:/db/recipes.xml</param-value>
	</init-param>
	<init-param>
	  <param-name>RecipeXMLSchemaPath</param-name>
	  <param-value>c:/db/recipes.xsd</param-value>
	</init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>RecipeServer</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>