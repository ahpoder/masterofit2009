<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:element name="tshirts">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="tshirt">
					<xs:simpleType>
						<xs:restriction base="xs:token">
							<xs:pattern value="([sS]|[mM]|[Xx]{0,3}[Ll])"/>
						</xs:restriction>
					</xs:simpleType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>